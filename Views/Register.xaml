        <t:RadComboBox Name="StudentCombobox" Height="40"  Initialized="StudentCombobox_Initialized" Width="190" Margin="25,116,965,352"/>
        <t:RadComboBox Name="PresentionCombobox" Height="40"  Initialized="PresentionCombobox_Initialized" Width="190" Margin="25,66,965,402"/>
        <t:RadWatermarkTextBox Name="StudentScoreTextbox"  HorizontalAlignment="Left"  VerticalAlignment="Top" WatermarkContent="Enter Student Score" Width="190" Height="40" Margin="35,166,0,0"/>
        <t:RadButton Content="Register" Name="RegisterButton" HorizontalAlignment="Left" Height="40" Margin="25,289,0,0" VerticalAlignment="Top" Width="190" Click="RegisterButton_Click"/>
        <t:RadButton Content="Update"   Name="UpdateButton" HorizontalAlignment="Left" Height="40" Margin="25,334,0,0" VerticalAlignment="Top" Width="190" Click="UpdateButton_Click"/>
        <t:RadButton Content="Delete"   Name="DeleteButton" HorizontalAlignment ="Left" Height="40" Margin="25,379,0,0" VerticalAlignment="Top" Width="190" Click="DeleteButton_Click"/>
        <t:RadWatermarkTextBox Name="TextBoxRID" HorizontalAlignment="Left" Margin="35,18,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" WatermarkContent="RID" Width="190" Height="40" IsEnabled="True" Visibility="Hidden" />

    </Grid>
